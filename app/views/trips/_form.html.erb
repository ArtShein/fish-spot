<%= form_with(model: trip) do |form| %>
  <% if trip.errors.any? %>
    <div style="color: red">
      <h2><%= t('global.messages.errors', count: trip.errors.count) %></h2>

      <ul>
        <% trip.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t('trips.form.name'), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label t('trips.form.location'), style: "display: block" %>
    <%= form.collection_select :location_id, Location.all, :id, :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
