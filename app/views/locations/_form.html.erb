<%= form_with(model: location) do |form| %>
  <% if location.errors.any? %>
    <div style="color: red">
      <h2><%= t('global.messages.errors', count: location.errors.count) %></h2>

      <ul>
        <% location.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t('locations.form.name'), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label t('locations.form.access'), style: "display: block" %>
    <%= form.select :accessibility, Location.accessibilities.keys.map {
      |key| [t("enums.location.accessibility.#{key}"), key]
    } %>
  </div>

  <div>
    <%= form.label t('locations.form.conditions'), style: "display: block" %>
    <%= form.select :conditions, Location.conditions.keys.map {
      |key| [t("enums.location.conditions.#{key}"), key]
    } %>
  </div>

  <div>
    <%= form.label t('locations.form.proxy'), style: "display: block" %>
    <%= form.select :proximity, Location.proximities.keys.map {
      |key| [t("enums.location.proximity.#{key}"), key]
    } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
