<div class="container">
  <h2 class="text-center text-2xl font-bold mb-2 mt-4">Sign up now!</h2>
  <div class="flex justify-center items-center min-h-screen">
    <div class="w-full max-w-md bg-white p-8 rounded shadow-xl mt-0">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= f.fields_for :profile do |pf| %>
          <div class="mb-2">
            <%= pf.label :first_name, class: "block text-gray-700 text-sm font-bold mb-1" %>
            <%= pf.text_field :first_name, placeholder: 'First name *', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="mb-2">
            <%= pf.label :last_name, class: "block text-gray-700 text-sm font-bold mb-1" %>
            <%= pf.text_field :last_name, placeholder: 'Last name *', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="mb-2">
            <%= pf.label :phone, class: "block text-gray-700 text-sm font-bold mb-1" %>
            <%= pf.text_field :phone, placeholder: 'Phone', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
        <% end %>

        <div class="mb-2">
          <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-1" %>
          <%= f.email_field :email, autocomplete: "email", placeholder: 'Email *', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-2">
          <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-1" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password *', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-2">
          <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Repeat password *', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <%= f.fields_for :profile do |profile_form| %>
          <div class="mb-2">
            <%= profile_form.label :description, class: "block text-gray-700 text-sm font-bold mb-1" %>
            <%= profile_form.text_area :description, cols: 40, rows: 3, placeholder: 'Tell us about yourself ;)', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
        <% end %>

        <div class="flex items-center justify-between">
          <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>